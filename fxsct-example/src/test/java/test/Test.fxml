<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane id="border-pane" prefHeight="200" prefWidth="320" xmlns:fx="http://javafx.com/fxml" fx:controller="test.Test">
	<center>
		<StackPane fx:id="mainContent" />
    </center>
    <bottom>
	 	<TilePane>
	 		<children>
	 			<Button fx:id="addNodeButton" text="Add Node" onAction="#addNode" maxWidth="300" />
	 			<Button fx:id="removeNodeButton" text="Remove Node" onAction="#removeNode"  maxWidth="300" />
	 			<Button fx:id="replaceNodeButton" text="Replace Node" onAction="#replaceNode"  maxWidth="300" />
	 			<Button fx:id="resetNodesButton" text="Reset Nodes" onAction="#resetNodes"  maxWidth="300" />
	 			<Button fx:id="clearNodesButton" text="Clear Nodes" onAction="#clearNodes"  maxWidth="300" />
	 		</children>
	 	</TilePane>
    </bottom>
    
</BorderPane>
